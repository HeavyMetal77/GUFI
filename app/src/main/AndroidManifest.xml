<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.tarastom.gufi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GUFI">
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".EditProfileActivity" />
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".ProfileActivity" />
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".DetailServiceActivity" />
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".ServiceCatalogActivity" />
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".FaqActivity" />
        <activity android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" android:name=".PreLoaderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>